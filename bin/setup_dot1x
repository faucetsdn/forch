#!/bin/bash -e

ROOT=$(dirname $0)/..
cd $ROOT

mkdir -p inst/forch-faucet-dot1x

cp misc/faucet_nodot1x.yaml inst/forch-faucet-dot1x/faucet.yaml

sudo ovs-vsctl del-br br-dot1x || true

docker rm -f forch-faucet-dot1x || true
docker rm -f forch-ntwk || true
docker rm -f forch-faux-1 || true
docker rm -f forch-faux-1 || true

bin/run_faux 1
bin/run_faux 2 

echo "Created faux containers"

docker cp misc/freeradius/wpasupplicant.conf forch-faux-1:/root/wpasupplicant.conf
docker cp misc/freeradius/wpasupplicant.conf.wng forch-faux-1:/root/wpasupplicant.conf.wng

docker exec forch-faux-1 ip addr flush faux-eth0
docker exec forch-faux-1 ifconfig faux-eth0 192.168.12.1/16
docker exec forch-faux-2 ip addr flush faux-eth0
docker exec forch-faux-2 ifconfig faux-eth0 192.168.12.2/16

echo "set IPs for faux"

docker run -d --privileged --name forch-ntwk --hostname forch-ntwk forch/faux
echo "forch up"
docker exec  forch-ntwk ip addr flush eth0
echo "ip flushed"
ip_br=$(ip -o -4 addr list docker0 | awk '{print $4}' | cut -d '/' -f1)
docker exec forch-ntwk ifconfig eth0 ${ip_br}2


sed "s/%br_addr/${ip_br}1/g" misc/freeradius/clients.conf > /tmp/clients.conf 
docker cp /tmp/clients.conf forch-ntwk:/etc/freeradius/3.0/clients.conf
rm /tmp/clients.conf
docker cp misc/freeradius/authorize forch-ntwk:/etc/freeradius/3.0/mods-config/files/authorize
docker exec forch-ntwk freeradius &

echo "freeradius setup"

bin/run_faucet dot1x 6653
docker exec forch-faucet-dot1x ip addr flush eth0
ip_fc=${ip_br}1
docker exec forch-faucet-dot1x ifconfig eth0 $ip_fc

echo  "faucet setup"

pid=$(docker inspect --format="{{ .State.Pid }}" forch-faucet-dot1x)
sudo ip link add dplane0 type veth peer name dplane-eth0 addr 9a:02:57:1e:8f:2a netns $pid
sudo ip link set dplane0 up
docker exec forch-faucet-dot1x ip link set dplane-eth0 up

#cp misc/faucet_dot1x.yaml inst/forch-faucet-dot1x/faucet.yaml

sudo ovs-vsctl --if-exists del-br br-dot1x \
    -- add-br br-dot1x \
    -- set bridge br-dot1x other_config:datapath-id=0x250

echo  "Created bridge"

sudo ovs-vsctl set-controller br-dot1x tcp:$ip_fc:6653


sudo ovs-vsctl add-port br-dot1x faux-1  -- set interface faux-1 ofport_request=1
sudo ovs-vsctl add-port br-dot1x faux-2 -- set interface faux-2 ofport_request=2
sudo ovs-vsctl add-port br-dot1x dplane0 -- set interface dplane0 ofport_request=3
docker exec forch-faux-1 ip link set faux-eth0 down
docker exec forch-faux-1 ip link set faux-eth0 up
sleep 15
#docker exec forch-faux-1 wpa_supplicant -B -t -c wpasupplicant.conf -i faux-eth0 -D wired
#echo "Waiting for system to settle"
#sleep 35
#docker exec forch-faux-1 ping -q -c 10 192.168.12.2
#wpa_pid=$(docker exec forch-faux-1 ps ax | grep wpa_supplicant | awk '{print $1}')
#docker exec forch-faux-1 kill $wpa_pid
